<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Category</title>
    <script type="module" src="/javascripts/sortCategory.js"></script>
  </head>
  <body>
    <header>
      <div class="header-container">
        <a href="/">トップ</a>
        &nbsp;>&nbsp;
        <a href="/login">ログイン</a>
        &nbsp;>&nbsp;カテゴリー
      </div>

      <div class="logined-user-name">
        <p><%= `ようこそ、${loginedUserName}さん` %></p>
      </div>
    </header>

    <main>
      <div class="category">
        <h1>カテゴリー</h1>
        <ul id="sortable-list" class="category-list">
          <% shopCategories.forEach((shopCategory, index) => { %>
          <li class="draggable" draggable="true">
            <a href="/memo/<%= index %>"><%= shopCategory %></a>
          </li>
          <% }) %>
        </ul>
        <a href="/category/create" class="create">新規作成</a>
        <a href="/category/delete" class="delete">削除</a>
        <div class="logout">
          <form action="/logout" method="post">
            <input type="submit" value="ログアウト" />
          </form>
        </div>
      </div>

      <!-- <script type="module" src="/javascripts/sortList.js"></script> -->
    </main>

    <footer></footer>
  </body>
</html>
